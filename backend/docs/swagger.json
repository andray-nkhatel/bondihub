    "definitions": {
        "handlers.CreateHouseRequest": {
            "type": "object",
            "required": [
                "address",
                "description",
                "house_type",
                "monthly_rent",
                "title"
            ],
            "properties": {
                "address": {
                    "type": "string",
                    "minLength": 10
                },
                "area": {
                    "type": "number",
                    "minimum": 0
                },
                "bathrooms": {
                    "type": "integer",
                    "minimum": 0
                },
                "bedrooms": {
                    "type": "integer",
                    "minimum": 0
                },
                "description": {
                    "type": "string",
                    "minLength": 10
                },
                "house_type": {
                    "type": "string",
                    "enum": [
                        "apartment",
                        "house",
                        "studio",
                        "townhouse",
                        "commercial"
                    ]
                },
                "is_featured": {
                    "type": "boolean"
                },
                "latitude": {
                    "type": "number",
                    "maximum": 90,
                    "minimum": -90
                },
                "longitude": {
                    "type": "number",
                    "maximum": 180,
                    "minimum": -180
                },
                "monthly_rent": {
                    "type": "number",
                    "minimum": 0
                },
                "title": {
                    "type": "string",
                    "maxLength": 200,
                    "minLength": 5
                }
            }
        },
        "handlers.CreatePaymentRequest": {
            "type": "object",
            "required": [
                "agreement_id",
                "amount",
                "method"
            ],
            "properties": {
                "agreement_id": {
                    "type": "string"
                },
                "amount": {
                    "type": "number",
                    "minimum": 0
                },
                "method": {
                    "type": "string",
                    "enum": [
                        "MTN",
                        "Airtel",
                        "Cash",
                        "Bank"
                    ]
                },
                "reference_no": {
                    "type": "string"
                }
            }
        },
        "handlers.CreateRentalAgreementRequest": {
            "type": "object",
            "required": [
                "deposit",
                "end_date",
                "house_id",
                "rent_amount",
                "start_date",
                "tenant_id"
            ],
            "properties": {
                "deposit": {
                    "type": "number",
                    "minimum": 0
                },
                "end_date": {
                    "type": "string"
                },
                "house_id": {
                    "type": "string"
                },
                "rent_amount": {
                    "type": "number",
                    "minimum": 0
                },
                "start_date": {
                    "type": "string"
                },
                "tenant_id": {
                    "type": "string"
                }
            }
        },
        "handlers.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "handlers.RegisterRequest": {
            "type": "object",
            "required": [
                "email",
                "full_name",
                "password",
                "phone",
                "role"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "john@example.com"
                },
                "full_name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2,
                    "example": "John Doe"
                },
                "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                },
                "phone": {
                    "type": "string",
                    "minLength": 10,
                    "example": "+260123456789"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "landlord",
                        "tenant",
                        "agent",
                        "admin"
                    ],
                    "example": "tenant"
                }
            }
        },
        "handlers.UpdateHouseRequest": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "area": {
                    "type": "number"
                },
                "bathrooms": {
                    "type": "integer"
                },
                "bedrooms": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "house_type": {
                    "type": "string"
                },
                "is_featured": {
                    "type": "boolean"
                },
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                },
                "monthly_rent": {
                    "type": "number"
                },
                "status": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
